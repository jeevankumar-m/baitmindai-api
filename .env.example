# Required: API key for protecting the honeypot endpoint (x-api-key header)
API_KEY=your-secret-api-key

# Required: Google Gemini API key (https://aistudio.google.com/apikey) for scam detection and agent
GEMINI_API_KEY=your-gemini-api-key

# Optional: Gemini model (default: gemini-2.0-flash)
GEMINI_MODEL=gemini-2.0-flash

# Optional: Send callback to GUVI (set true only after deployment for evaluation)
SEND_GUVI_CALLBACK=false

# Optional: Seconds to wait after last message before sending GUVI callback (5-7, default 6)
CALLBACK_IDLE_SECONDS=6

# Optional: GUVI callback URL
GUVI_CALLBACK_URL=https://hackathon.guvi.in/api/updateHoneyPotFinalResult

# Optional: Port (default 3000)
PORT=3000
